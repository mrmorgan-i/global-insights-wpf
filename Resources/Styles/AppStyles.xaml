<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">

    <!-- Dashboard Card Style -->
    <Style x:Key="DashboardCardStyle" TargetType="materialDesign:Card">
        <Setter Property="Padding" Value="16" />
        <Setter Property="Margin" Value="8" />
        <Setter Property="materialDesign:ShadowAssist.ShadowDepth" Value="Depth2" />
        <Setter Property="materialDesign:ShadowAssist.ShadowEdges" Value="All" />
        <Setter Property="Background" Value="{DynamicResource MaterialDesignCardBackground}" />
    </Style>

    <!-- Service Header Style -->
    <Style x:Key="ServiceHeaderStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="24" />
        <Setter Property="FontWeight" Value="Medium" />
        <Setter Property="Margin" Value="0,0,0,16" />
        <Setter Property="Foreground" Value="{DynamicResource MaterialDesignBody}" />
    </Style>

    <!-- Navigation Button Style -->
    <Style x:Key="NavigationButtonStyle" TargetType="Button" BasedOn="{StaticResource MaterialDesignRaisedButton}">
        <Setter Property="Height" Value="60" />
        <Setter Property="Margin" Value="8" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="FontWeight" Value="Medium" />
        <Setter Property="materialDesign:ButtonAssist.CornerRadius" Value="8" />
    </Style>

    <!-- Data Label Style -->
    <Style x:Key="DataLabelStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="12" />
        <Setter Property="FontWeight" Value="Normal" />
        <Setter Property="Foreground" Value="{DynamicResource MaterialDesignBodyLight}" />
        <Setter Property="Margin" Value="0,0,0,4" />
    </Style>

    <!-- Data Value Style -->
    <Style x:Key="DataValueStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="16" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="Foreground" Value="{DynamicResource MaterialDesignBody}" />
    </Style>

    <!-- Large Temperature Style -->
    <Style x:Key="LargeTemperatureStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="48" />
        <Setter Property="FontWeight" Value="Light" />
        <Setter Property="Foreground" Value="{DynamicResource PrimaryHueMidBrush}" />
        <Setter Property="HorizontalAlignment" Value="Center" />
    </Style>

    <!-- Loading Spinner Style -->
    <Style x:Key="LoadingSpinnerStyle" TargetType="ProgressBar" BasedOn="{StaticResource MaterialDesignCircularProgressBar}">
        <Setter Property="Width" Value="40" />
        <Setter Property="Height" Value="40" />
        <Setter Property="IsIndeterminate" Value="True" />
        <Setter Property="Foreground" Value="{DynamicResource PrimaryHueMidBrush}" />
    </Style>

    <!-- Search Box Style -->
    <Style x:Key="SearchBoxStyle" TargetType="TextBox" BasedOn="{StaticResource MaterialDesignFloatingHintTextBox}">
        <Setter Property="Height" Value="56" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="materialDesign:HintAssist.IsFloating" Value="True" />
        <Setter Property="materialDesign:TextFieldAssist.HasClearButton" Value="True" />
    </Style>

    <!-- News Article Card Style -->
    <Style x:Key="ArticleCardStyle" TargetType="materialDesign:Card">
        <Setter Property="Margin" Value="0,0,0,8" />
        <Setter Property="Padding" Value="16" />
        <Setter Property="Cursor" Value="Hand" />
        <Setter Property="materialDesign:ShadowAssist.ShadowDepth" Value="Depth1" />
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="materialDesign:ShadowAssist.ShadowDepth" Value="Depth3" />
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- Stock Price Positive Style -->
    <Style x:Key="StockPositiveStyle" TargetType="TextBlock" BasedOn="{StaticResource DataValueStyle}">
        <Setter Property="Foreground" Value="{StaticResource SuccessBrush}" />
    </Style>

    <!-- Stock Price Negative Style -->
    <Style x:Key="StockNegativeStyle" TargetType="TextBlock" BasedOn="{StaticResource DataValueStyle}">
        <Setter Property="Foreground" Value="{StaticResource ErrorBrush}" />
    </Style>

    <!-- Quiz Option Button Style -->
    <Style x:Key="QuizOptionStyle" TargetType="RadioButton" BasedOn="{StaticResource MaterialDesignChoiceChipOutlineRadioButton}">
        <Setter Property="Margin" Value="0,4" />
        <Setter Property="Padding" Value="16,8" />
        <Setter Property="FontSize" Value="14" />
    </Style>

</ResourceDictionary>
