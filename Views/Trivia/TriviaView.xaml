<UserControl x:Class="Global_Insights_Dashboard.Views.Trivia.TriviaView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:converters="clr-namespace:Global_Insights_Dashboard.Utils.Converters"
             Background="{DynamicResource MaterialDesignPaper}">

    <UserControl.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter" />
        <converters:InverseBooleanToVisibilityConverter x:Key="InverseBoolToVisibilityConverter" />
        <converters:CorrectAnswerColorConverter x:Key="CorrectAnswerColorConverter" />
        <converters:StringToIntConverter x:Key="StringToIntConverter" />
        
        <!-- Answer Option Style -->
        <Style x:Key="AnswerOptionStyle" TargetType="RadioButton" BasedOn="{StaticResource MaterialDesignChoiceChipRadioButton}">
            <Setter Property="Margin" Value="0,4" />
            <Setter Property="Padding" Value="16,8" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="HorizontalAlignment" Value="Stretch" />
        </Style>
    </UserControl.Resources>

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Header Section -->
        <materialDesign:Card Grid.Row="0" Padding="20" Margin="0,0,0,20"
                           materialDesign:ElevationAssist.Elevation="Dp1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!-- Title and Progress -->
                <Grid Grid.Row="0" Margin="0,0,0,16">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="HelpCircle" Width="28" Height="28" 
                                               Foreground="{DynamicResource PrimaryHueMidBrush}" 
                                               VerticalAlignment="Center" />
                        <TextBlock Text="Trivia Quiz" FontSize="24" FontWeight="Bold" 
                                 Margin="12,0,0,0" VerticalAlignment="Center" />
                    </StackPanel>

                    <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="{Binding ProgressText}" FontSize="16" FontWeight="SemiBold"
                                 Margin="0,0,16,0" VerticalAlignment="Center" />
                        
                        <!-- Progress Bar -->
                        <ProgressBar Width="120" Height="8" 
                                   Minimum="0" Maximum="{Binding TotalQuestions}" 
                                   Value="{Binding CurrentQuestionNumber}"
                                   Visibility="{Binding IsQuizActive, Converter={StaticResource BoolToVisibilityConverter}}" />
                    </StackPanel>
                </Grid>

                <!-- Quiz Configuration -->
                <Grid Grid.Row="1" 
                    Visibility="{Binding IsQuizActive, Converter={StaticResource InverseBoolToVisibilityConverter}}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <!-- Number of Questions -->
                    <StackPanel Grid.Column="0" Margin="0,0,12,0">
                        <TextBlock Text="Questions" FontSize="12" Margin="0,0,0,4"
                                 Foreground="{DynamicResource MaterialDesignBodyLight}" />
                        <TextBox Text="{Binding NumberOfQuestions, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource StringToIntConverter}}"
                               materialDesign:HintAssist.Hint="1-50"
                               Style="{StaticResource MaterialDesignFilledTextBox}" />
                    </StackPanel>

                    <!-- Category -->
                    <StackPanel Grid.Column="1" Margin="0,0,12,0">
                        <TextBlock Text="Category" FontSize="12" Margin="0,0,0,4"
                                 Foreground="{DynamicResource MaterialDesignBodyLight}" />
                        <ComboBox ItemsSource="{Binding AvailableCategories}"
                                SelectedValue="{Binding SelectedCategory}"
                                SelectedValuePath="Key"
                                DisplayMemberPath="Value"
                                Style="{StaticResource MaterialDesignFilledComboBox}" />
                    </StackPanel>

                    <!-- Difficulty -->
                    <StackPanel Grid.Column="2" Margin="0,0,12,0">
                        <TextBlock Text="Difficulty" FontSize="12" Margin="0,0,0,4"
                                 Foreground="{DynamicResource MaterialDesignBodyLight}" />
                        <ComboBox ItemsSource="{Binding AvailableDifficulties}"
                                SelectedValue="{Binding SelectedDifficulty}"
                                SelectedValuePath="Key"
                                DisplayMemberPath="Value"
                                Style="{StaticResource MaterialDesignFilledComboBox}" />
                    </StackPanel>

                    <!-- Type -->
                    <StackPanel Grid.Column="3" Margin="0,0,12,0">
                        <TextBlock Text="Type" FontSize="12" Margin="0,0,0,4"
                                 Foreground="{DynamicResource MaterialDesignBodyLight}" />
                        <ComboBox ItemsSource="{Binding AvailableTypes}"
                                SelectedValue="{Binding SelectedType}"
                                SelectedValuePath="Key"
                                DisplayMemberPath="Value"
                                Style="{StaticResource MaterialDesignFilledComboBox}" />
                    </StackPanel>

                    <!-- Start Button -->
                    <Button Grid.Column="4"
                          Command="{Binding StartQuizCommand}"
                          Style="{StaticResource MaterialDesignRaisedButton}"
                          Content="Start Quiz"
                          VerticalAlignment="Bottom"
                          FontSize="16" Padding="32,16"
                          MinWidth="150" Height="50"
                          IsEnabled="{Binding IsLoading, Converter={StaticResource InverseBoolToVisibilityConverter}}" />
                </Grid>
            </Grid>
        </materialDesign:Card>

        <!-- Loading Indicator -->
        <materialDesign:Card Grid.Row="1" 
                           Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}"
                           Padding="20" Margin="0,0,0,16">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <ProgressBar Style="{StaticResource MaterialDesignCircularProgressBar}"
                           IsIndeterminate="True" Width="32" Height="32" />
                <TextBlock Text="Loading quiz questions..." Margin="16,0,0,0" 
                         VerticalAlignment="Center" FontSize="16" />
            </StackPanel>
        </materialDesign:Card>

        <!-- Content Area -->
        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                
                <!-- Welcome Message -->
                <materialDesign:Card Visibility="{Binding IsQuizActive, Converter={StaticResource InverseBoolToVisibilityConverter}}"
                                   Padding="40" HorizontalAlignment="Center"
                                   Margin="0,0,0,16">
                    <StackPanel HorizontalAlignment="Center" 
                              Visibility="{Binding ShowResults, Converter={StaticResource InverseBoolToVisibilityConverter}}">
                        <materialDesign:PackIcon Kind="HelpCircleOutline" Width="64" Height="64" 
                                               Foreground="{DynamicResource MaterialDesignBodyLight}" 
                                               HorizontalAlignment="Center" />
                        <TextBlock Text="Welcome to Trivia Quiz!" 
                                 FontSize="18" Margin="0,16,0,8"
                                 HorizontalAlignment="Center"
                                 Foreground="{DynamicResource MaterialDesignBodyLight}" />
                        <TextBlock Text="Configure your quiz settings above and click Start Quiz to begin"
                                 FontSize="14" HorizontalAlignment="Center"
                                 Foreground="{DynamicResource MaterialDesignBodyLight}" />
                    </StackPanel>
                </materialDesign:Card>

                <!-- Quiz Results -->
                <materialDesign:Card Visibility="{Binding ShowResults, Converter={StaticResource BoolToVisibilityConverter}}"
                                   Padding="40" Margin="0,0,0,16"
                                   materialDesign:ElevationAssist.Elevation="Dp4">
                    <StackPanel HorizontalAlignment="Center">
                        <materialDesign:PackIcon Kind="TrophyAward" Width="80" Height="80" 
                                               Foreground="{DynamicResource PrimaryHueMidBrush}" 
                                               HorizontalAlignment="Center" />
                        <TextBlock Text="Quiz Completed!" 
                                 FontSize="24" FontWeight="Bold" Margin="0,16,0,8"
                                 HorizontalAlignment="Center"
                                 Foreground="{DynamicResource PrimaryHueMidBrush}" />
                        
                        <Grid Margin="0,16,0,24">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" HorizontalAlignment="Center" Margin="0,0,32,0">
                                <TextBlock Text="Score" FontSize="14" HorizontalAlignment="Center"
                                         Foreground="{DynamicResource MaterialDesignBodyLight}" />
                                <TextBlock FontSize="32" FontWeight="Bold" HorizontalAlignment="Center"
                                         Foreground="{DynamicResource PrimaryHueMidBrush}">
                                    <TextBlock.Text>
                                        <MultiBinding StringFormat="{}{0}/{1}">
                                            <Binding Path="CorrectAnswers" />
                                            <Binding Path="TotalQuestions" />
                                        </MultiBinding>
                                    </TextBlock.Text>
                                </TextBlock>
                            </StackPanel>

                            <StackPanel Grid.Column="1" HorizontalAlignment="Center" Margin="0,0,32,0">
                                <TextBlock Text="Percentage" FontSize="14" HorizontalAlignment="Center"
                                         Foreground="{DynamicResource MaterialDesignBodyLight}" />
                                <TextBlock Text="{Binding ScorePercentage, StringFormat={}{0:F1}%}" FontSize="32" FontWeight="Bold" HorizontalAlignment="Center"
                                         Foreground="{DynamicResource PrimaryHueMidBrush}" />
                            </StackPanel>

                            <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                                <TextBlock Text="Time" FontSize="14" HorizontalAlignment="Center"
                                         Foreground="{DynamicResource MaterialDesignBodyLight}" />
                                <TextBlock Text="{Binding ElapsedTime, StringFormat={}{0:mm\\:ss}}" 
                                         FontSize="32" FontWeight="Bold" HorizontalAlignment="Center"
                                         Foreground="{DynamicResource PrimaryHueMidBrush}" />
                            </StackPanel>
                        </Grid>

                        <Button Command="{Binding RestartQuizCommand}"
                              Style="{StaticResource MaterialDesignRaisedButton}"
                              Content="Start New Quiz"
                              FontSize="16" Padding="32,16"
                              Margin="0,16,0,0" MinWidth="180" Height="50" />
                        
                        <!-- Export Results Button -->
                        <Button Command="{Binding ExportDataCommand}"
                              Style="{StaticResource MaterialDesignOutlinedButton}"
                              Content="Export Results"
                              FontSize="16" Padding="32,16"
                              Margin="0,8,0,0" MinWidth="180" Height="50" />
                    </StackPanel>
                </materialDesign:Card>

                <!-- Current Question -->
                <materialDesign:Card Visibility="{Binding IsQuizActive, Converter={StaticResource BoolToVisibilityConverter}}"
                                   Padding="24" Margin="0,0,0,16"
                                   materialDesign:ElevationAssist.Elevation="Dp2">
                    <StackPanel>
                        <!-- Question Category & Difficulty -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                            <Border Background="{DynamicResource PrimaryHueLightBrush}" 
                                  CornerRadius="12" Padding="8,4">
                                <TextBlock Text="{Binding CurrentQuestion.Category}" 
                                         FontSize="12" FontWeight="SemiBold"
                                         Foreground="{DynamicResource PrimaryHueDarkForegroundBrush}" />
                            </Border>
                            <Border Background="{DynamicResource SecondaryHueLightBrush}" 
                                  CornerRadius="12" Padding="8,4" Margin="8,0,0,0">
                                <TextBlock Text="{Binding CurrentQuestion.Difficulty}" 
                                         FontSize="12" FontWeight="SemiBold"
                                         Foreground="{DynamicResource SecondaryHueDarkForegroundBrush}" />
                            </Border>
                        </StackPanel>

                        <!-- Question Text -->
                        <TextBlock Text="{Binding CurrentQuestion.Question}" 
                                 FontSize="18" FontWeight="SemiBold" 
                                 TextWrapping="Wrap" Margin="0,0,0,20"
                                 LineHeight="24" />

                        <!-- Answer Options -->
                        <ItemsControl ItemsSource="{Binding CurrentAnswerOptions}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <RadioButton Content="{Binding}" 
                                               GroupName="QuizAnswers"
                                               Style="{StaticResource AnswerOptionStyle}"
                                               Command="{Binding Path=DataContext.SelectAnswerCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                               CommandParameter="{Binding}" />
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <!-- Answer Feedback -->
                        <materialDesign:Card Visibility="{Binding ShowAnswerFeedback, Converter={StaticResource BoolToVisibilityConverter}}"
                                           Padding="20" Margin="0,20,0,16"
                                           materialDesign:ElevationAssist.Elevation="Dp2">
                            <StackPanel HorizontalAlignment="Center">
                                <TextBlock Text="{Binding FeedbackMessage}" 
                                         FontSize="20" FontWeight="Bold" 
                                         HorizontalAlignment="Center" Margin="0,0,0,8"
                                         Foreground="{Binding IsAnswerCorrect, Converter={StaticResource CorrectAnswerColorConverter}}" />
                                
                                <TextBlock Text="{Binding CorrectAnswerText}"
                                         FontSize="14" HorizontalAlignment="Center"
                                         Visibility="{Binding CorrectAnswerText, Converter={StaticResource BoolToVisibilityConverter}}"
                                         Foreground="{DynamicResource MaterialDesignBody}" 
                                         Margin="0,0,0,16" />
                                
                                <Button Command="{Binding NextQuestionCommand}"
                                      Style="{StaticResource MaterialDesignRaisedButton}"
                                      Content="Next Question"
                                      FontSize="16" Padding="32,16"
                                      MinWidth="180" Height="50" Margin="0,8,0,0" />
                            </StackPanel>
                        </materialDesign:Card>

                        <!-- Submit Button -->
                        <Button Command="{Binding SubmitAnswerCommand}"
                              Style="{StaticResource MaterialDesignRaisedButton}"
                              Content="Submit Answer"
                              HorizontalAlignment="Center"
                              Margin="0,20,0,20"
                              FontSize="16" Padding="32,16"
                              MinWidth="180" Height="50"
                              Visibility="{Binding ShowAnswerFeedback, Converter={StaticResource InverseBoolToVisibilityConverter}}"
                              IsEnabled="{Binding CanSubmitAnswer}" />
                    </StackPanel>
                </materialDesign:Card>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
